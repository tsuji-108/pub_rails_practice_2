<% show_actions = local_assigns.fetch(:show_actions, false) %>

<div id="<%= dom_id board %>" class="card shadow-sm h-100">
  <div class="card-body">
    <h2 class="card-title h5"><%= board.title %></h2>
    <% if board.description.present? %>
      <p class="card-text"><%= simple_format(board.description) %></p>
    <% else %>
      <p class="card-text text-muted fst-italic mb-0">説明はまだ登録されていません。</p>
    <% end %>
  </div>
  <% if show_actions %>
    <div class="card-footer bg-white border-0 pt-0 text-end">
      <%= link_to "詳細", board, class: "btn btn-outline-primary btn-sm" %>
    </div>
  <% end %>
</div>
