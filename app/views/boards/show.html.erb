<div class="container mt-3">
  <h1><%= @board.title %></h1>
  <p><%= @board.description %></p>

  <% if @chatThread.present? %>
    <ul class="list-group">
      <% Array(@chatThread).each do |thread| %>
        <li class="list-group-item"><%= link_to "#{thread.title}", "/boards/#{@board.id}/thread/#{thread.id}" %></li>
      <% end %>
    </ul>
  <% else %>
    <p>スレッドがありません。</p>
  <% end %>
</div>

<div class="container mt-3">
  <h2>スレッドを新規作成する</h2>
  <%= form_with url: "/boards/#{@board.id}/thread", method: :post do |form| %>
    <%= hidden_field_tag :board_id, @board.id %>
    <div>
      <label for="title" class="form-label">スレッド名</label>
      <%= form.text_field :title, placeholder: "スレッド名を入力してください", id: "title", class: "form-control" %>
    </div>
    <div class="mt-3">
      <label for="description" class="form-label">スレッド説明文</label>
      <%= form.text_area :description, placeholder: "スレッド説明文を入力してください", id: "description", class: "form-control" %>
    </div>
    <div class="mt-3">
      <%= form.submit "スレッドを作成する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
