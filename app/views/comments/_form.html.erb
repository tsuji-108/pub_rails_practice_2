<%= form_with(model: comment, url: comments_path, local: true, class: "card shadow-sm") do |form| %>
  <div class="card-body">
    <% if comment.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h2 class="h6 mb-3"><%= pluralize(comment.errors.count, "件のエラー") %>により保存できませんでした。</h2>
        <ul class="mb-0">
          <% comment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :content, class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 4, placeholder: "コメント本文" %>
    </div>

    <!-- archived_at is set internally; hidden from user input -->

    <div class="row g-3">
      <%= form.hidden_field :discussion_id, value: comment.discussion_id || params[:discussion_id] || @discussion&.id %>
    </div>
  </div>
  <div class="card-footer bg-white border-0 pt-0 text-end">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
