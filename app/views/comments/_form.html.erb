<%= form_with(model: comment, class: "card shadow-sm") do |form| %>
  <div class="card-body">
    <% if comment.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h2 class="h6 mb-3"><%= pluralize(comment.errors.count, "件のエラー") %>により保存できませんでした。</h2>
        <ul class="mb-0">
          <% comment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :content, class: "form-label" %>
      <%= form.text_area :content, class: "form-control", rows: 4, placeholder: "コメント本文" %>
    </div>

    <div class="mb-3">
      <%= form.label :archived_at, class: "form-label" %>
      <%= form.datetime_field :archived_at, class: "form-control" %>
      <div class="form-text">未設定の場合は空のままにしてください。</div>
    </div>

    <div class="row g-3">
      <div class="col-md-6">
        <%= form.label :user_id, class: "form-label" %>
        <%= form.number_field :user_id, class: "form-control", min: 1, placeholder: "ユーザーID" %>
      </div>
      <div class="col-md-6">
        <%= form.label :discussion_id, class: "form-label" %>
        <%= form.number_field :discussion_id, class: "form-control", min: 1, placeholder: "ディスカッションID" %>
      </div>
    </div>
  </div>
  <div class="card-footer bg-white border-0 pt-0 text-end">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
