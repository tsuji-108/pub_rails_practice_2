<% content_for :title, "Comment ##{@comment.id}" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Comment 詳細</h1>
  <%= link_to "一覧に戻る", comments_path, class: "btn btn-outline-secondary" %>
</div>

<%= render partial: "comment", locals: { comment: @comment, show_actions: false } %>

<div class="d-flex flex-wrap gap-2 mt-4">
  <%= link_to "編集", edit_comment_path(@comment), class: "btn btn-secondary" %>
  <%= button_to "削除", @comment, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
</div>
