<% content_for :title, @discussion.title %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0"><%= @discussion.title %> スレッド詳細</h1>
  <%= link_to "掲示板(ID: #{discussion.board_id})に戻る", "/boards/#{@discussion.board_id}", class: "btn btn-outline-secondary" %>
</div>

<%= render partial: "discussion", locals: { discussion: @discussion, show_actions: false } %>

<div class="d-flex flex-wrap gap-2 mt-4">
  <%= link_to "編集", edit_discussion_path(@discussion), class: "btn btn-secondary" %>
  <%= button_to "削除", @discussion, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
</div>
