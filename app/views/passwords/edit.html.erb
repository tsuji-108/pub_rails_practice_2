<% content_for :title, "Reset password" %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="h4 mb-4 text-center">パスワード再設定</h1>
        <%= form_with url: password_path(params[:token]), method: :put do |form| %>
          <div class="mb-3">
            <%= form.label :password, "新しいパスワード", class: "form-label" %>
            <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :password_confirmation, "新しいパスワード（確認）", class: "form-label" %>
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72, class: "form-control" %>
          </div>
          <%= form.submit "保存", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
